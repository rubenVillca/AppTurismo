<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hga.appturismo.activity.ClasTurismoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Clasificación del Turismo en Cochabamba"
                        android:textSize="19dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                    android:id="@+id/btn_sitiosNaturales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sitios Naturales"
                    android:onClick="goSitiosNaturales"
                    android:textAllCaps="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_patrimonio_Urbano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Patrimonio Urbano Arquitectónico, Artístico, Museos y Manifestaciones Culturales"
                        android:onClick="goPatrimonioUrbano"
                        android:textAllCaps="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_etnografia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Etnografía y Folklore"
                        android:onClick="goEtnografia"
                        android:textAllCaps="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_realizacioneTecnicas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Realizaciones Técnicas y Científicas"
                        android:onClick="goRealizacionesTecnicas"
                        android:textAllCaps="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_acontecimientosPro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acontecimientos Programados"
                        android:onClick="goAcontecimientosProgramados"
                        android:textAllCaps="false"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
