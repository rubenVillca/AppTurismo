<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context="com.hga.appturismo.activity.EditarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <LinearLayout
                android:id="@+id/editar_layout_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_textView_tipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_tipo"
                    android:textSize="@dimen/size_text_primary" />

                <Spinner
                    android:id="@+id/editar_spinner_tipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_provincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_textView_provincia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_provincia"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <Spinner
                    android:id="@+id/editar_spinner_provincia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@array/provincia"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_tipoTurismo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_textView_tipoTurismo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/label_tipo_de_turismo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <Spinner
                    android:id="@+id/editar_spinner_tipo_turismo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@array/tipo_turismo"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_textView_nombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_nombre"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_nombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_descripcion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/label_descripcion"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_descripcion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:gravity="top|left"
                    android:lines="8"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/size_text_primary"
                    tools:ignore="RtlHardcoded"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_actividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_actividad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/label_actividad"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_actividad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:lines="8"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_linea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_linea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Linea:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_linea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Fecha:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="1"
                    android:text="@string/label_email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_direccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="1"
                    android:text="@string/label_direccion"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_direccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_pagina_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_pagina_web"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="1"
                    android:text="@string/label_pagina_web"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_paginaweb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:inputType="textUri"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_telefono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Teléfono"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_telefono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="number"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_horario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_horario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Horario"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_horario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_latitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Latitud"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_latitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/editar_label_longitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Longitud"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_text_primary" />

                <EditText
                    android:id="@+id/editar_txt_longitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editar_layout_imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/editar_btn_imagen_capturar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Capturar"
                        android:onClick="goCameraActivity"
                        tools:targetApi="lollipop" />

                    <Button
                        android:id="@+id/editar_btn_imagen_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Buscar Imagen"
                        android:onClick="goGaleryActivity"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/editar_ruta_imagen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size_text_primary"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/editar_insertar_imagen"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/margin_label_top_bottom"
                    android:layout_marginTop="@dimen/margin_label_top_bottom"
                    android:layout_weight="2"
                    android:src="@drawable/img_fondo"
                    android:text="@string/label_longitud" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/editar_btn_insertar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Guardar Cambios"
                    android:textAllCaps="false"
                    tools:targetApi="lollipop" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
